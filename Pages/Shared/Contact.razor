@page "/Contact"
    <!---------------------------------------welcome pagegoogle map contact------------------>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-4">
                <div class="google-map">
                    <div style="width: 100%">
                        <iframe width="1320px" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                                src="https://maps.google.com/maps?width=100%25&amp;height=400&amp;hl=en&amp;q=magogonimalaikaschoolskigamboni%20Tanzania+(Malaiaka)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
