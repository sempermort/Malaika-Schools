@page "/ExamTitles/Index"
@using MalaikaSchool.Data.Models

<h2>Index</h2>

<p>
    <NavLink href="/ExamTitles/Create">Create New</NavLink>
</p>
<table class="table">
    <tr>
        <th>
            Title Name
        </th>
        <th>
          EducationLevel
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.TitleName
    </td>
    <td>
        @item.EducationLevel.EducationLevelName
    </td>

    <td>
        <NavLink href="/ExamTitles/Edit/{Id:int}" @key="@item.Id">Edit</NavLink>|
        <NavLink href="/ExamTitles/Details" @key="@item.Id">Details</NavLink>|
        <NavLink href="/ExamTitles/Delete" @key="@item.Id">Delete</NavLink>
    </td>
</tr>
    }

</table>
@code {

    private List<ExamTitle> Model;


    protected override  Task OnInitializedAsync()
    {
        Model = new List<ExamTitle>();

        return base.OnInitializedAsync();

    }

}