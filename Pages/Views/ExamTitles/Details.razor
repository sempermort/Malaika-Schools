@page "/ExamTitles/Details"
@using MalaikaSchool.Data.Models





<div class="row">
    <div class="box box-block bg-white col-md-6">
        <h3>Details</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Title Name
                </dt>
                <dd>
                    @Model.TitleName
                </dd>
                <dt>
                    EducationLevel
                </dt>
                <dd>
                    @Model.EducationLevel.EducationLevelName
                </dd>

            </dl>
        </div>
    </div>

</div>

<div>
    <p>
        <NavLink href="/ExamTitles/Edit/{Id:int}" class="btn btn-warning">Edit</NavLink>
        <NavLink href="/ExamTitles/Index" class="btn btn-warning">Back to List</NavLink>
    </p>
</div>

@code {

    private ExamTitle Model;


    protected override  Task OnInitializedAsync()
    {
        Model = new ExamTitle();


        return base.OnInitializedAsync();
    }

}


