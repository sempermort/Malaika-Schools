@page "/Designations/Details/{Id:int}"
@inherits OwningComponentBase<StudentsService>

<div class="panel panel-info">
   
    <div class="panel-body">
        @if (Model != null)
        {

            <div>
                <dl class="dl-horizontal d-flex p-1">


                    <dt class="pr-2">
                        Designation:
                    </dt>

                    <dd>
                        @Model.Name
                    </dd>


                </dl>

            </div>
        }
        else
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        }
    </div>
    <div class="panel-footer">
        <NavLink href="/Designations/Index" class="btn btn-warning float-right">Back to List</NavLink>
    </div>

</div>

@code {


    private IdentityRole Model = new IdentityRole();
    [Parameter]
    public string Id { get; set; }


    @inject RoleManager<IdentityRole> roleManager
    @inject NavigationManager NavigationManager
    protected override async Task OnInitializedAsync()
    {
        Model = await roleManager.FindByIdAsync(Id);
    }


}


