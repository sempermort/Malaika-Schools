@page "/EmployeeVM"
@using MalaikaSchool.Data.ViewModels
@using MalaikaSchool.Data.Models
@using MalaikaSchool.Data.Enum

<div class="page-header">
    <div class="d-flex justify-content-between mt-5">
        <h3 class="">
            New Employee
            <i class="ace-icon fa fa-angle-double-right"></i>
        </h3>

        <small>
            <NavLink asp-page="Employe/Index" class="btn btn-info">Back to List</NavLink>
        </small>
    </div>
</div>
<!-- /.page-header -->
<form>


    <div class="row">
        <div class="tabs-container">
            <ul class="nav nav-tabs">

                <li class="nav-item"><NavLink class="nav-link active" data-toggle="tab" href="#tab-1"> Student info</NavLink></li>
                <li class="nav-item"><NavLink class="nav-link" data-toggle="tab" href="#tab-2"> Guardian Info</NavLink></li>
                <li class="nav-item"><NavLink class="nav-link" data-toggle="tab" href="#tab-3"> EmployeeVM Info</NavLink></li>
            </ul>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane active">
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="Name" class="control-label">Student's Name</label>
                                <input for="Name" class="form-control" bind="@Model.Name" />
                            </div>



                            <div class="form-group">
                                <label for="DateOfBirth" class="control-label">Date Of Birth</label>
                                <input for="DateOfBirth" type="date" class="form-control" bind="@Model.DOB" />
                            </div>

                            <div class="form-group">
                                <label for="StudentEmail" class="control-label">Student Email</label>
                                <input for="StudentEmail" type="email" class="form-control" bind="@Model.Email" />

                            </div>
                            <div class="form-group">
                                <select for="MaritalStatus" class="form-control" bind="@Model.MaritalStatus">
                                    <option value="">-- Select Your MaritalStatus --</option>

                                    @foreach (var Mstatus in Enum.GetNames(typeof(MaritalStatus)))
                                    {

                                        <option value="@Mstatus">@Mstatus</option>
                                    }

                                </select>

                            </div>

                            <div class="form-group">
                                <label for="Nationality" class="control-label">Nationality</label>
                                <input for="Nationality" class="form-control" bind="@Model.Nationality" />

                            </div>
                            <div class="form-group">
                                <label for="PresentAddress" class="control-label">Present Address</label>
                                <input for="PresentAddress" class="form-control" bind="@Model.PresentAddress" />

                            </div>



                            <div class="form-group">
                                <label for="NID" class="control-label">NIDA Number</label>
                                <input for="NID" class="form-control" bind="@Model.NID" />

                            </div>


                            <div class="form-group">
                                <label for="Image" class="control-label d-block">Staff Photo</label>
                                <input type="file" name="StudentImage" class="d-block" />

                            </div>


                            <div class="form-group">
                                <select for="Religion" class="form-control" bind="@Model.Religion">
                                    <option value="">-- Select Your Religion --</option>

                                    @foreach (var religion in Enum.GetNames(typeof(Religion)))
                                    {

                                        <option value="@religion">@religion</option>
                                    }

                                </select>

                            </div>

                            <div class="form-group">
                                <select for="Gender" class="form-control" bind="@Model.Gender">
                                    <option value="">-- Select Gender --</option>

                                    @foreach (var gender in Enum.GetNames(typeof(Gender)))
                                    {

                                        <option value="@gender">@gender</option>
                                    }

                                </select>

                            </div>
                        </div>
                    </div>
                </div>
                <div id="tab-2" class="tab-pane">
                    <div class="panel-body">


                        <div class="form-group">
                            <label for="EducationLevelId" class="control-label">Student</label>
                            <select for="EducationLevelId" class="form-control" bind="@Model.EducationLevelId">
                                <option value="">-- Select Education level --</option>
                                @if (educationLevels != null)
                                {
                                    @foreach (var stc in educationLevels)
                                    {
                                        <option value="@stc.Id">@stc.EducationLevel.EducationLevelName</option>
                                    }
                                }
                            </select>

                        </div>


                    </div>

                </div>

                <div id="tab-3" class="tab-pane">
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="DOJ" class="control-label">Joining Date</label>
                                <input for="DOJ" class="form-control" bind="@Model.DOJ" />

                            </div>

                            <div class="form-group">
                                <label for="ClassNameId" class="control-label">Student Class</label>
                                <select for="ClassIdNameId" class="form-control" bind="@Model.DesignationId">
                                    <option value="@Model.DesignationId">@Model.NewDesignation.Name</option>
                                    @if (designations != null)
                                    {
                                        @foreach (var stc in designations)
                                        {

                                            <option value="@stc.Id">@stc.Name</option>
                                        }
                                    }
                                </select>

                            </div>

                            <div class="form-group">
                                <label for="Salary" class="control-label">Salary</label>
                                <input for="Salary" class="form-control" bind="@Model.Salary" />

                            </div>
                            <div class="form-group">
                                <label for="TotalLeave" class="control-label">Present Address</label>
                                <input for="TotalLeave" class="form-control" bind="@Model.TotalLeave" />

                            </div>
                            <div class="form-group">
                                <label for="Appointment" class="control-label">Present Address</label>
                                <input for="Appointment" class="form-control" bind="@Model.Appointment" />

                            </div>

                            <input type="submit" class="btn btn-success" value="Save" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@code {

    private EmployeeVM Model;
    private List<EmployeeEducation> educationLevels;
    private List<Designation> designations;

    protected override Task OnInitializedAsync()
    {
        Model = new EmployeeVM();
        educationLevels = new List<EmployeeEducation>();
        designations = new List<Designation>();
        return base.OnInitializedAsync();

    }

}
