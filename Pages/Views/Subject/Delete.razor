@page "/Subject/Delete"
@inherits OwningComponentBase<StudentsService>
<div class="row">
    <div class="box box-block bg-white col-md-6">


        <h3>Are you sure you want to delete this?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    class
                </dt>

                <dd>
                    @Model.Name
                </dd>

                <dt>
                    Subject
                </dt>

                <dd>
                    @Model.Name
                </dd>
                <dt>
                    code
                </dt>

                <dd>
                    @Model.Code
                </dd>

            </dl>


            <EditForm OnValidSubmit="@HandleValidSubmit" Model="@Model" Id="DeleteSubject" class="col-md-7 m-auto">


                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            </EditForm>
        </div>
    </div>

</div>

<div>
    <NavLink href="/Subject/Index" class="btn btn-warning">Back to List</NavLink>
</div>

@code {

    private Subject Model;


    protected override Task OnInitializedAsync()
    {
        Model = new Subject();

        return base.OnInitializedAsync();
    }

    public async Task HandleValidSubmit(EditContext context)
    {
        try
        {
            await Service.DeleteConfirmed(Model.Id);
        }
        catch (Exception)
        {
            //ToastContent = ex.GetBaseException().Message;

            //await this.ToastObj.Show();
        }
    }
}


