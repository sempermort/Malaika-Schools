@page "/Admissions/delete"
@using MalaikaSchool.Data.Models
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Admission</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Student Name
        </dt>

        <dd>
            @model.Students.Select(n => n.Name)
        </dd>

        <dt>
            AdmissionDate
        </dt>

        <dd>
            @model.AdmissionDate)
        </dd>

        <dt>
            Session
        </dt>

        <dd>
            @model.Session.Name
        </dd>

        <dt>
            PreviousSchool
        </dt>

        <dd>
            @model.PreviousSchool
        </dd>

        <dt>
            Previous School Address
        </dt>

        <dd>
            @model.PreviousSchoolAddrs
        </dd>

        <dt>
            @model.PreviousSchoolDocument
        </dt>
    </dl>

    <form action="/" method="post">

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
                     <NavLink href="/Admissions/Index">Back to List</NavLink>
        </div>
    </form>
</div>
@code {

    private Admission model;


    protected override  Task OnInitializedAsync()
    {
        model = new Admission();


        return base.OnInitializedAsync();
    }

}