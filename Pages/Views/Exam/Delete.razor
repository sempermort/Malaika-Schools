@page "/Exam/Delete"
@using MalaikaSchool.Data.Models





<div class="row">
    <div class="box box-block bg-white col-md-6">


        <h3>Are you sure you want to delete this?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Class
                </dt>
                <dd>
                   @Model.StudentClass.ClassName
                </dd>
                <dt>
                    Subject
                </dt>
                <dd>
                    @Model.Subject.Name
                </dd>
                <dt>
                    Total
                </dt>
                <dd>
                    @Model.Total
                </dd>
                <dt>
                    Grade
                </dt>
                <dd>
                    @Model.Grade
                </dd>

            </dl>

            <form action="/" method="post">

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    <NavLink href="/Exam/Index">Back to List</NavLink>
                </div>
            </form>
        </div>
    </div>

</div>

<div>
    <NavLink href="/Exam/Index" class="btn btn-warning">Back to List</NavLink>
</div>

@code {

    private Exam Model;


    protected override  Task OnInitializedAsync()
    {
        Model = new Exam();


        return base.OnInitializedAsync();
    }

}


