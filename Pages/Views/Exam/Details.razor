@page "/Exam/Details/{Id:int}"
@inherits OwningComponentBase<StudentsService>




@if (Model!=null)
{


    <div class="row">
        <div class="box box-block bg-white col-md-6">
            <h3>Details</h3>
            <div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item"> Student Name:@Model.Student.Name </li>
                    <li class="list-group-item"> Mark: @Model.Mark </li>
                    <li class="list-group-item"> Grade: @Model.Grade </li>
                </ul>
            </div>
        </div>

    </div>

    <div class="d-flex justify-content-between">

        <NavLink href="/Exam/Edit/{Id:int}" class="btn btn-warning">Edit</NavLink>
        <NavLink href="/Exam/Index" class="btn btn-warning">Back to List</NavLink>

    </div>
}
    @code {

        [Parameter]
        public int Id { get; set; }
private Exam Model ;


    protected override async Task OnInitializedAsync()
    {
        Model = await Service.GetExam(Id);


    }

    }


