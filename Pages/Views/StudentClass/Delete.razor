@using MalaikaSchool.Data.Models




<div class="row">
    <div class="box box-block bg-white col-md-6">


        <h3>Are you sure you want to delete this?</h3>
        <div>
            <dl class="dl-horizontal">


              
                <dt>
                    Class Name
                </dt>

                <dd>
                    @Model.ClassName
                </dd>

            </dl>

            <form action="/" method="post">

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    <NavLink href="/StudentClass/Index">Back to List</NavLink>
                </div>
            </form>
        </div>
    </div>

</div>

<div>
    <NavLink href="/StudentClass/Index" class="btn btn-warning">Back to List</NavLink>
</div>

@code {
    [Parameter]
    public int Id { get; set; }
    private StudentClass Model;


    protected override  Task OnInitializedAsync()
    {
        Model = new StudentClass();

        return base.OnInitializedAsync();

    }

}


