@using MalaikaSchool.Data.Models




<div class="row">
    <div class="box box-block bg-white col-md-6">


        <h3>Details StudentClass</h3>
        <div>
            <dl class="dl-horizontal">


               
                <dt>
                    Class Name
                </dt>

                <dd>
                    @Model.ClassName
                </dd>



            </dl>


        </div>
    </div>

</div>

<div>
    <p>
        <NavLink href="/StudentClass/Edit/{Id:int}" class="btn btn-warning">Edit</NavLink>
        <NavLink href="/StudentClass/Index" class="btn btn-warning">Back to List</NavLink>
    </p>
</div>

@code {
    [Parameter]
    public int Id { get; set; }
    private StudentClass Model;


    protected override  Task OnInitializedAsync()
    {
        Model = new StudentClass();


        return base.OnInitializedAsync();
    }

}


