@using MalaikaSchool.Data.Services
@inherits OwningComponentBase<StudentsService>
@using MalaikaSchool.Data.Models
@page "/Employee/Index"


<h2>Index</h2>

<p>
    <NavLink href="/Employee/Create">Create New</NavLink>
</p>
@if (@Model.Count > 0)
{
    <table class="table">

        <tr>

            <th>
                Name of Employee
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Religion
            </th>
            <th>
                Marital Status
            </th>
            <th>
                Nationality
            </th>
            <th>
                NIDA
            </th>
            <th>
                Current Address
            </th>

            <th>
                Parmanent Address
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DOB
                </td>
                <td>
                    @item.Religion
                </td>
                <td>
                    @item.MaritalStatus
                </td>
                <td>
                    @item.Nationality
                </td>
                <td>
                    @item.NID
                </td>
                <td>
                    @item.PresentAddress
                </td>

                <td>
                    @item.PermanentAddress
                </td>


                <td>
                    <NavLink href="@($"/Employee/Edit/{item.Id}")">Edit</NavLink> |
                    <NavLink href="@($"/Employee/Details/{item.Id}")">Details</NavLink> |
                    <NavLink href="@($"/Employee/Delete/{item.Id}")">Delete</NavLink> 
                </td>
            </tr>
        }

    </table>

}
else
{

    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

}


@code {

    private List<Employee> Model = new List<Employee>();


    protected override async Task OnInitializedAsync()
    {
        Model = await Service.EmployeeIndex();
    }

}